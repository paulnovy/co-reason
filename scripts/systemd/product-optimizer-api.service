[Unit]
Description=Product Optimizer API (uvicorn)
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/marian/co-reason/backend
ExecStart=/home/marian/co-reason/backend/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=2
